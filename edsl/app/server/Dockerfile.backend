FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install EDSL with services extras directly from the mounted volume
# Note: We'll use a volume mount for development
RUN pip install fastapi uvicorn pydantic requests

# Copy server files
COPY server.py client.py ./

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
